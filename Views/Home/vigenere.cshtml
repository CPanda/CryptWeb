@model Vigenere

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<div class="container">
    <h3>Add Customer</h3>
    <hr />
    <br />
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Vigenere.encrypted"></label>
                <input asp-for="Vigenere.encrypted" class="form-control" />
                <span class="alert-danger" asp-validation-for="Vigenere.encrypted"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Vigenere.decrypted"></label>
                <input asp-for="Vigenere.decrypted" class="form-control" />
                <span class="alert-danger" asp-validation-for="Vigenere.decrypted"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Vigenere.key"></label>
                <input asp-for="Vigenere.key" class="form-control" />
                <span class="alert-danger" asp-validation-for="Vigenere.key"></span>
            </div>
        </div>
        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/allcustomer">Cancel</a>
    </form>
</div>